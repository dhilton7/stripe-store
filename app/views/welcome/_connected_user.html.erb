<div class="row">
	<div class="col-lg-12">
		<div class="top-prompt">
			<h3>Have something you want to sell?</h3> 
			<%= link_to "Sell New Item", new_product_path, class: 'btn btn-lg btn-primary' %>
		</div>
	</div>
</div>

<% if @products.count > 0 %>
	<div class="row">
		<div class="col-lg-12">
			<h3>My Products</h3>
		</div>
	</div>
	<div class="row">
		<% @products.each do |product| %>
			<%= render partial: 'products/product', locals: { product: product } %>
		<% end %>
	</div>
	<div class="row">
		<div class="col-lg-12 text-center">
			<div class="pagination">
				<%= will_paginate @products %>
			</div>
		</div>
	</div>
<% end %>
<div class="row">
	<div class="col-lg-12">
  	<div class="page-header">
			<h1>Order Confirmation</h1>    
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="text-center order-detail">
			<h2><%= @product %></h2>
			<p><%= @product.description %></p>
			<div class="price">
				Total: <%= number_to_currency(@product.price) %>
			</div>
			<%= simple_form_for @order do |f| %>
				<%= f.input :product_id, 
							as: :hidden,
							input_html: {
								value: @product.id
							}
				%>
				<%= f.input :amount,
							as: :hidden,
							input_html: {
								value: @product.price
							}
				%>
      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Purhcase of <%= @product.name %>"
          data-amount="<%= @product.price_cents %>"
          data-locale="auto"></script>
     	<% end %>
	</div>
</div>

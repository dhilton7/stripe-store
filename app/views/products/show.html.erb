<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1><%= @product.name %></h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-3 col-md-4 col-sm-6 col-xsm-6 text-center">
    <div class="product-img">
      <%= image_tag('product.png', class:'img-responsive') %>
    </div>
  </div>
  <div class="col-lg-6 col-md-6 col-sm-6">
    <div class="product-detail">
      <p><%= @product.description %></p>
      <%= link_to "Buy It Now", new_order_path(pid: @product), class: 'btn btn-primary' %>
    </div>
  </div>
</div>